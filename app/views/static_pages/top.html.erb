<div class="top-page">
  <!-- ヘッダー -->
  <header class="header">
    <h1 class="logo"><%= t('.app_name') %></h1>
  </header>

  <!-- メインビジュアル -->
  <section class="hero">
    <%= image_tag 'car_image.jpg', alt: t('.car_image_alt'), class: 'hero-image' %>
    <h2><%= t('.hero_title') %></h2>
    <p><%= t('.hero_subtitle') %></p>
  </section>

  <!-- アプリの説明 -->
  <section class="features">
    <h3><%= t('.features_title') %></h3>
    <ul>
      <li><%= t('.feature_1') %></li>
      <li><%= t('.feature_2') %></li>
      <li><%= t('.feature_3') %></li>
    </ul>
  </section>

  <!-- フッター -->
  <footer class="footer">
    <p>&copy; <%= Time.current.year %><%= t('.app_name') %></p>
  </footer>
</div>
